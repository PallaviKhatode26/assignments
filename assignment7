/*2. Input a String S with multiple words, and remove whitespaces and
output the result -
Input: “Hii Boy”
Output: “HiiBoy”*/

let string = "hello world";
console.log(`Input is: ${string}`);
let res = string.replace(/\s+/g, "");
console.log(` output is : ${res}`);
